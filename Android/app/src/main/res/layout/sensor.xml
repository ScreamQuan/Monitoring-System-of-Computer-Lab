<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/place2"
            android:padding="5dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:background="#009688"
           />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#79CDCD"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <ImageView
                android:id="@+id/tppict1"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                app:srcCompat="@drawable/temp2" />

            <ImageView
                android:id="@+id/tppict2"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/temp2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/wd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="52px"
                    android:text="当前室内温度为：" />

                <TextView
                    android:id="@+id/vofTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="70px" />

                <TextView
                    android:id="@+id/dw1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textColor="#000000"
                    android:textSize="70px" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#79CDCD"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <ImageView
                android:id="@+id/hipict1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/humi"
                android:layout_gravity="left" />

            <ImageView
                android:id="@+id/hupict2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/humi"
                android:layout_gravity="right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="52px"
                    android:text="当前室内湿度为：" />

                <TextView
                    android:id="@+id/vofHumi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="70px" />

                <TextView
                    android:id="@+id/dw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="％"
                    android:textColor="#000000"
                    android:textSize="70px" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#79CDCD"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <ImageView
                android:id="@+id/iu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/illu"
                android:layout_gravity="left" />

            <ImageView
                android:id="@+id/iu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/illu"
                android:layout_gravity="right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/gq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="52px"
                    android:text="当前室内光强为：" />

                <TextView
                    android:id="@+id/vofIllu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="70px" />

                <TextView
                    android:id="@+id/dw3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="％"
                    android:textColor="#000000"
                    android:textSize="70px" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
